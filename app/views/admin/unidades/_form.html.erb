

<%= form_with(model: [:admin, unidade], url: admin_unidades_path, method: :post) do |form| %>
  <% if unidade.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(unidade.errors.count, "error") %> Não foi possível salvar essa Unidade:</h2>
      <ul>
        <% unidade.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>

<% end %>


  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>

  <div class="field">
    <%= form.label :secretaria_id %>
    <%= form.collection_select :secretaria_id, Secretaria.all, :id, :nome, { prompt: 'Selecione uma secretaria' } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
