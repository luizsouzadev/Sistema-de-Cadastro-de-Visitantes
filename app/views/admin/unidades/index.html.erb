<h1>Unidades</h1>

<div id="unidades">
  <% @unidades.each do |unidade| %>
    <p><strong>Nome:</strong> <%= unidade.nome %></p>
    <p><strong>Secretaria:</strong> <%= unidade.secretaria.nome %></p>
    <p>
      <%= link_to "Visualizar Unidade", admin_unidade_path(unidade) %>
    </p>
  <% end %>
</div>

