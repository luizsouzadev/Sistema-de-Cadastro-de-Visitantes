<%= form_with(model: [:admin, funcionario], local: true) do |form| %>

  <% if funcionario.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(funcionario.errors.count, "error") %> Não foi possível salvar esse Funcionário:</h2>

      <ul>
        <% funcionario.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome %>
  </div>

  <div class="field">
    <%= form.label :cpf, style: "display: block" %>
    <%= form.text_field :cpf %>
  </div>

  <div class="field">
    <%= form.label :rg, style: "display: block" %>
    <%= form.text_field :rg %>
  </div>

  <div class="field">
    <%= form.label :telefone, style: "display: block" %>
    <%= form.text_field :telefone %>
  </div>

  <div class="field">
    <%= form.label :secretaria_id, style: "display: block" %>
    <%= form.collection_select :secretaria_id, Secretaria.all, :id, :nome, prompt: "Selecione uma secretaria" %>
  </div>

  <div class="field">
    <%= form.label :unidade_id, style: "display: block" %>
    <%= form.collection_select :unidade_id, Unidade.all, :id, :nome, prompt: "Selecione uma unidade" %>
  </div>
  
  <div class="field">
    <%= form.label :setor_id, style: "display: block" %>
    <%= form.collection_select :setor_id, Setor.all, :id, :nome, prompt: "Selecione um Setor" %>
  </div>

  <div class="field">
    <%= form.label :cargo_id, style: "display: block" %>
    <%= form.collection_select :cargo_id, Cargo.all, :id, :nome, prompt: "Selecione um cargo" %>
  </div>

  <div class="field">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password, style: "display: block" %>
    <%= form.text_field :password %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
